{
    "name": "vapor",
    "description": "Vapor Monorepo",
    "author": "goorm",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=18.20.0"
    },
    "volta": {
        "node": "20.15.0",
        "yarn": "1.22.22"
    },
    "scripts": {
        "dev": "concurrently \"yarn lint:watch\" \"yarn prettier:watch\" \"yarn workspace @goorm-dev/vapor-foundation build:watch\" \"yarn storybook\"",
        "clean": "lerna clean -y && yarn cache clean && rm -rf packages/*/dist && rm -rf node_modules && rm -f yarn.lock && rm -rf packages/*/.next",
        "install:all": "yarn && yarn install:reactstrap",
        "install:reactstrap": "git submodule update --init --recursive && cd libs/reactstrap && yarn",
        "build:all": "lerna run build --stream --scope @goorm-dev/vapor-icons --scope @goorm-dev/vapor-hooks --scope @goorm-dev/vapor-core --scope @goorm-dev/vapor-components --scope @goorm-dev/vapor-charts --scope @goorm-dev/vapor-tables --scope @goorm-dev/vapor-foundation --scope @goorm-dev/vapor-tools",
        "build:vapor-core": "lerna run build --scope @goorm-dev/vapor-core --include-dependencies --stream",
        "build:vapor-core:only": "lerna run build --scope @goorm-dev/vapor-core --stream",
        "build:vapor-components": "lerna run build --scope @goorm-dev/vapor-components --include-dependencies --stream",
        "build:vapor-components:only": "lerna run build --scope @goorm-dev/vapor-components --stream",
        "build:vapor-icons": "lerna run build --scope @goorm-dev/vapor-icons --include-dependencies --stream",
        "build:vapor-icons:only": "lerna run build --scope @goorm-dev/vapor-icons --stream",
        "build:vapor-tables": "lerna run build --scope @goorm-dev/vapor-tables --include-dependencies --stream",
        "build:vapor-tables:only": "lerna run build --scope @goorm-dev/vapor-tables --stream",
        "build:vapor-charts": "lerna run build --scope @goorm-dev/vapor-charts --include-dependencies --stream",
        "build:vapor-charts:only": "lerna run build --scope @goorm-dev/vapor-charts --stream",
        "build:vapor-tools": "lerna run build --scope @goorm-dev/vapor-tools --include-dependencies --stream",
        "build:vapor-tools:only": "lerna run build --scope @goorm-dev/vapor-tools --stream",
        "build:vapor-foundation": "lerna run build --scope @goorm-dev/vapor-foundation",
        "build:vapor-foundation:dev:all": "lerna run build:dev --scope @goorm-dev/vapor-foundation",
        "build:vapor-foundation:dev:light": "lerna run build:dev:light --scope @goorm-dev/vapor-foundation",
        "build:vapor-foundation:dev:dark": "lerna run build:dev:dark --scope @goorm-dev/vapor-foundation",
        "build:vapor-hooks": "lerna run build --scope @goorm-dev/vapor-hooks --include-dependencies --stream",
        "build:vapor-hooks:only": "lerna run build --scope @goorm-dev/vapor-hooks --stream",
        "build:vapor-date": "lerna run build --scope @goorm-dev/vapor-date --include-dependencies --stream",
        "build:vapor-date:only": "lerna run build --scope @goorm-dev/vapor-date --stream",
        "build:vapor-codemirror": "lerna run build --scope @goorm-dev/vapor-codemirror --include-dependencies --stream",
        "build:vapor-codemirror:only": "lerna run build --scope @goorm-dev/vapor-codemirror --stream",
        "build:vapor-theme": "lerna run build --scope @goorm-dev/vapor-theme --include-dependencies --stream",
        "build:vapor-docs": "lerna run build --scope @goorm-dev/vapor-docs --include-dependencies --stream",
        "build:vapor-docs:only": "lerna run build --scope @goorm-dev/vapor-docs",
        "test:vapor-core": "lerna run test --scope @goorm-dev/vapor-core",
        "storybook": "start-storybook -p 9009",
        "dev:vapor-docs": "lerna run dev --scope @goorm-dev/vapor-docs",
        "build:storybook": "yarn build-storybook",
        "lint:watch": "esw -w --ext .js,.jsx,.ts,.tsx ./packages/*/src ./stories",
        "lint:fix": "eslint --fix ./packages/*/src ./stories",
        "prettier:watch": "onchange 'packages/*/src/**/*.js' 'packages/*/src/**/*.jsx' 'packages/*/src/**/*.ts' 'packages/*/src/**/*.tsx' 'stories/**/*.jsx' 'stories/**/*.tsx' -- prettier --config .prettierrc.js --write {{changed}}",
        "prettier:write": "prettier --config .prettierrc.js --write ./packages/**/*.{js,jsx,ts,tsx}",
        "copy-changelog": "cp CHANGELOG.md 'packages/vapor-docs/src/app/(dashboard-frame)/guides/change-log/page.mdx'",
        "version": "lerna version --no-git-tag-version --no-push --yes && node ./scripts/version/index.js",
        "version:release": "git flow release publish && yarn run version",
        "version:hotfix": "git flow hotfix publish && yarn run version",
        "publish": "lerna publish from-package --yes",
        "publish:experimental": "node scripts/publish.js",
        "export-figma-basic-icons": "TYPE=basic node ./scripts/sync-foundation/syncFigmaIcons.js && yarn run prettier-icon:write 'packages/vapor-icons/src/components/basic-icons' 'stories/foundation/icons' --log-level silent",
        "export-figma-extension-icons": "TYPE=extension node ./scripts/sync-foundation/syncFigmaIcons.js && yarn run prettier-icon:write 'packages/vapor-icons/src/components/extension-icons' 'stories/foundation/icons' --log-level silent",
        "export-figma-symbol-icons": "TYPE=symbol node ./scripts/sync-foundation/syncFigmaIcons.js && yarn run prettier-icon:write 'packages/vapor-icons/src/components/symbol-icons' 'stories/foundation/icons' --log-level silent",
        "export-figma-stack-icons": "TYPE=stack node ./scripts/sync-foundation/syncFigmaIcons.js && yarn run prettier-icon:write 'packages/vapor-icons/src/components/stack-icons' 'stories/foundation/icons' --log-level silent",
        "export-figma-basic-resources": "TYPE=basicImages node ./scripts/sync-foundation/syncFigmaResources.js && yarn run prettier-icon:write 'stories/foundation' --log-level silent",
        "export-figma-brand-resources": "TYPE=brandImages node ./scripts/sync-foundation/syncFigmaResources.js && yarn run prettier-icon:write 'stories/foundation' --log-level silent",
        "export-figma-other-brand-resources": "TYPE=otherBrandImages node ./scripts/sync-foundation/syncFigmaResources.js && yarn run prettier-icon:write 'stories/foundation' --log-level silent",
        "lint-staged": "lint-staged",
        "upload-guides-introduction-image": "ts-node ./scripts/make-docs-story/introduction/uploadPackageLayer",
        "update:vapor-docs:all-components-description:components": "NODE_OPTIONS=--max-old-space-size=4096 PACKAGE_NAME=components ts-node ./scripts/make-docs-story/all-components/index.ts",
        "update:vapor-docs:all-components-description:core": "NODE_OPTIONS=--max-old-space-size=4096 PACKAGE_NAME=core ts-node ./scripts/make-docs-story/all-components/index.ts",
        "update:vapor-docs:components-accessibility": "ts-node ./scripts/make-docs-story/usage/accessiblity/index.ts",
        "make:vapor-docs:component": "plop component",
        "update:vapor-docs:component": "plop update-component",
        "make:vapor-docs:core": "plop core",
        "update:vapor-docs:core": "plop update-core",
        "make:vapor-docs:tools": "plop tools",
        "update:vapor-docs:tools": "plop update-tools",
        "update:vapor-docs-nav": "plop nav",
        "make-component": "plop make-component",
        "postinstall": "husky install",
        "update:vapor-docs-meta:core": "yarn jscodeshift -t ./scripts/make-docs-story/jscodeshift/update-docs-meta.ts --extensions=ts --parser=ts --print",
        "ws": "node ./scripts/workspace.js"
    },
    "devDependencies": {
        "@aws-sdk/client-s3": "^3.352.0",
        "@aws-sdk/credential-providers": "^3.352.0",
        "@babel/core": "^7.18.10",
        "@babel/eslint-parser": "^7.15.8",
        "@babel/plugin-transform-modules-commonjs": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.18.6",
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@commitlint/config-lerna-scopes": "^15.0.0",
        "@goorm-dev/eslint-config-goorm": "^1.1.0",
        "@mdx-js/mdx": "1.6.22",
        "@mdx-js/react": "1.6.22",
        "@mdx-js/util": "1.6.22",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-commonjs": "^22.0.1",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-terser": "^0.4.3",
        "@storybook/addon-actions": "^6.3.12",
        "@storybook/addon-docs": "^6.3.12",
        "@storybook/addon-essentials": "^6.4.18",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-knobs": "^6.3.1",
        "@storybook/addon-options": "^5.3.21",
        "@storybook/addon-storysource": "^6.3.12",
        "@storybook/addon-viewport": "^6.3.12",
        "@storybook/addons": "^6.5.9",
        "@storybook/react": "^6.5.12",
        "@storybook/theming": "^6.5.9",
        "@swc/core": "^1.7.40",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jscodeshift": "^0.12.0",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "babel-loader": "^8.2.5",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-preset-react-app": "^10.0.1",
        "concurrently": "^6.4.0",
        "conventional-changelog-conventionalcommits": "^4.6.1",
        "crypto": "^1.0.1",
        "css-loader": "^3.6.0",
        "dotenv": "^16.0.2",
        "eslint": "8.57.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "18.0.0",
        "eslint-config-next": "14.1.3",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-babel-module": "^5.1.2",
        "eslint-import-resolver-typescript": "^3.4.0",
        "eslint-import-resolver-webpack": "^0.12.2",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.34.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-watch": "^7.0.0",
        "husky": "^8.0.3",
        "jscodeshift": "^17.1.1",
        "lerna": "^8.1.2",
        "lint-staged": "^13.0.3",
        "onchange": "^7.1.0",
        "paths.macro": "^3.0.1",
        "plop": "^4.0.1",
        "postcss-flexbugs-fixes": "^4.2.1",
        "postcss-import": "^12.0.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "3.2.5",
        "react": ">=16",
        "react-docgen-typescript-plugin": "^1.0.5",
        "react-dom": ">=16",
        "reactstrap": "8.10.1",
        "read-pkg-up": "7.0.1",
        "rollup": "^2.77.2",
        "rollup-plugin-postcss": "^3.1.3",
        "rollup-plugin-summary": "^1.4.3",
        "rollup-plugin-typescript2": "^0.32.1",
        "sass": "^1.49.7",
        "sass-loader": "^10.1.0",
        "storybook-dark-mode": "^1.1.0",
        "ts-patch": "^3.2.0",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "tsup": "^8.3.5",
        "typescript": "5.5.1-rc"
    }
}
